<Window x:Class="slutproj_TravelPal.UserDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:slutproj_TravelPal"
        mc:Ignorable="d"
        Title="UserDetailsWindow" Height="450" Width="500" Background="MediumSlateBlue">
    <Grid>
        <Grid Margin="10" Background="MintCream">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="37*"/>
            </Grid.RowDefinitions>
            <Label 
                x:Name="lblUserHeader"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Content="Logged in as: "
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Foreground="MediumSlateBlue"
                FontSize="24"
                FontWeight="Bold"
                FontFamily="Arial"
                Margin="5"
                />
            <Label
                x:Name="lblLoggedInUser"
                Grid.Column="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Foreground="MediumSlateBlue"
                FontSize="20"
                FontWeight="Bold"
                FontFamily="Arial" 
                Margin="5"/>
            <Label 
                x:Name="lblNewUsername"
                Grid.Column="0"
                Grid.Row="1"
                Foreground="MediumSlateBlue"
                Content="New username"
                FontSize="14"
                VerticalAlignment="Center"
                Margin="5"/>
            <Label 
                x:Name="lblNewPassword"
                Grid.Column="0"
                Grid.Row="3"
                Foreground="MediumSlateBlue"
                Content="Password"
                FontSize="14"
                VerticalAlignment="Center"
                Margin="5"/>
            <Label 
                x:Name="lblConfPassword"
                Grid.Column="0"
                Grid.Row="4"
                Foreground="MediumSlateBlue"
                Content="Confirm password"
                FontSize="14"
                VerticalAlignment="Center"
                Margin="5"/>
            <Label 
                x:Name="lblCountries"
                Grid.Column="0"
                Grid.Row="5"
                Foreground="MediumSlateBlue"
                Content="Country"
                FontSize="16"
                VerticalAlignment="Center"
                Margin="5"/>
            <TextBox 
                x:Name="txtUsername"
                Grid.Column="1"
                Grid.Row="1"
                Margin="5"
                Grid.ColumnSpan="2"/>
            <PasswordBox 
                x:Name="pbPassword"
                Grid.Column="1"
                Grid.Row="3"
                Margin="5" Grid.ColumnSpan="2"/>
            <PasswordBox 
                x:Name="pbConfirmPassword"
                Grid.Column="1"
                Grid.Row="4"
                Margin="5" Grid.ColumnSpan="2"/>
            <ComboBox
                x:Name="cbCountries"
                Grid.Column="1"
                Grid.Row="5"
                Margin="7" 
                Grid.ColumnSpan="2"
                />
            <Button
                x:Name="btnSave"
                Grid.Column="2"
                Grid.Row="6"
                Margin="10"
                Content="Save" 
                Grid.ColumnSpan="1"
                Width="130"
                HorizontalAlignment="center" Click="btnSave_Click"
                />
            <Button
                x:Name="btnCancel"
                Grid.Column="1"
                Grid.Row="6"
                Margin="10"
                Content="Cancel"
                Width="130"
                HorizontalAlignment="Center" 
                Click="btnCancel_Click"/>
        </Grid>
    </Grid>
</Window>
