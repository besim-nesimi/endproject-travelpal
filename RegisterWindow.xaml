<Window x:Class="slutproj_TravelPal.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:slutproj_TravelPal"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="397" Background="MintCream">
    <Grid>
        <Grid Grid.Column="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label 
                x:Name="lblHeader"
                Grid.Column="0"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Foreground="MediumSlateBlue"
                Content="Welcome to TravelPal!"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                />
            <Label 
                x:Name="lblUsername"
                Grid.Column="0"
                Grid.Row="1"
                Foreground="MediumSlateBlue"
                Content="Username"
                FontSize="14"
                VerticalAlignment="Center"/>
            <Label 
                x:Name="lblPassword"
                Grid.Column="0"
                Grid.Row="2"
                Foreground="MediumSlateBlue"
                Content="Password"
                FontSize="14"
                VerticalAlignment="Center"/>
            <Label 
                x:Name="lblConfirmPassword"
                Grid.Column="0"
                Grid.Row="3"
                Foreground="MediumSlateBlue"
                Content="Confirm password"
                FontSize="14"
                VerticalAlignment="Center"/>
            <Label 
                x:Name="lblCountries"
                Grid.Column="0"
                Grid.Row="5"
                Foreground="MediumSlateBlue"
                Content="Country"
                FontSize="16"
                VerticalAlignment="Center"/>
            <TextBox 
                x:Name="txtUsername"
                Grid.Column="1"
                Grid.Row="1"
                Margin="4"/>
            <PasswordBox 
                x:Name="pbPassword"
                Grid.Column="1"
                Grid.Row="2"
                Margin="4"/>
            <PasswordBox 
                x:Name="pbConfirmPassword"
                Grid.Column="1"
                Grid.Row="3"
                Margin="4"/>
            <ComboBox
                x:Name="cbCountries"
                Grid.Column="1"
                Grid.Row="5"
                Margin="4"
                />
            <Button
                x:Name="btnRegister"
                Grid.Column="1"
                Grid.Row="6"
                Margin="4"
                Content="Register" 
                Click="btnRegister_Click"/>
        </Grid>
        
    </Grid>
</Window>
